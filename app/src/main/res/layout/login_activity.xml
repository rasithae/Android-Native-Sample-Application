<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height = "fill_parent">
    <!--android:paddingRight = "@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop = "@dimen/activity_vertical_margin"-->
    <!--android:paddingBottom = "@dimen/activity_vertical_margin">-->

    <ImageView
        android:id="@+id/imageLoginPageLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/android" />

    <TextView
        android:id="@+id/textViewAppNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageLoginPageLogo"
        android:layout_centerHorizontal="true"
        android:text="Android Demo App"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewLoginLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAppNameLabel"
        android:layout_centerHorizontal="true"
        android:text="LOG IN"
        android:textColor="#009933"
        android:textSize="20dp" />

    <EditText
        android:id = "@+id/editTextUserName"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:hint = "User Name: admin"
        android:focusable = "true"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:layout_below = "@+id/textViewLoginLabel"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+id/editTextUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:hint="Password: admin" />

